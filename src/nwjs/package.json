{
  "name": "uproxy_desktop",
  "version": "1.0",
  "chromium-args": "--enable-features=NativeNotifications",
  "main": "/generic_ui/index.html",
  "bg-script": "/scripts/main.js",
  "window": {
    "show": true,
    "width": 500,
    "height": 800
  },
  "scripts": {
    "start": "nw ."
  },
  "engines": {
    "node": "*"
  },
  "permissions": [
    "identity",
    "storage",
    "http://*/",
    "https://*/",
    "notifications",
    "proxy",
    "system.network"
  ],
  "sockets": {
    "tcp": { "connect" : "" },
    "tcpServer": { "listen": "" },
    "udp": { "send": "", "bind": "" }
  },
  "externally_connectable": {
    "matches" : ["*://*.uproxy.org/*", "*://uproxysite.appspot.com/*", "*://test-dot-uproxysite.appspot.com/*", "*://beta-dot-uproxysite.appspot.com/*"]
  }
}
